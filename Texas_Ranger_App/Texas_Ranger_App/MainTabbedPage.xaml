<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Texas_Ranger_App.MainTabbedPage">

    <ContentPage Title="MENU">
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame BackgroundColor="#00115E">
                    <Image Source="logo.png" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"/>
                </Frame>
                <Frame BackgroundColor="#00115E">
                    <Label x:Name="JokeLabel" Text="{Binding Value}" FontSize="25" TextColor="White" />
                </Frame>
            </StackLayout>
            <Frame BackgroundColor="#ffffff" >
                <!--<Button x:Name="foodButton" Text="Food Menu" TextColor="White" FontSize="28" BackgroundColor="Transparent" Clicked=""/>-->
            </Frame>
            <Frame BackgroundColor="#900C3F">
                <!--<Button x:Name="drinksButton" Text="Drinks Menu" TextColor="White" FontSize="28" BackgroundColor="Transparent" Clicked=""/>-->
            </Frame>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Tab 2">
        <Label Text="Content page 2"/>
    </ContentPage>
    <ContentPage Title="Tab 3">
        <Label Text="Content page 3"/>
    </ContentPage>
</TabbedPage>