<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Texas_Ranger_App.ReservationEntryPage">
    <ContentPage.Content>
        <StackLayout>
            <Editor Placeholder="Enter your name"
                Text="{Binding Name}"
                HeightRequest="100" />
            <Editor Placeholder="Enter your number of guests"
                Text="{Binding Guests}"
                HeightRequest="100" />
            <Editor Placeholder="Enter your date and time"
                Text="{Binding Date}"
                HeightRequest="100" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Save" 
                    Clicked="OnSaveButtonClicked" />
                <Button Grid.Column="1"
                    Text="Delete" 
                    Clicked="OnDeleteButtonClicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>